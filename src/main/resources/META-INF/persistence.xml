<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="crmPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Classes d'entités -->
        <class>fr.wijin.crm.model.Customer</class>
        <class>fr.wijin.crm.model.Order</class>
        <class>fr.wijin.crm.model.User</class>
        
        <properties>
            <!-- Configuration de la base de données -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/mabase"/>
            <property name="jakarta.persistence.jdbc.user" value="user"/>
            <property name="jakarta.persistence.jdbc.password" value="poec2025"/>
            
            <!-- Configuration Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.default_schema" value="crm"/>
            
            <!-- ✅ MIGRATION ET ÉCRASEMENT DE LA BDD -->
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <!-- Options disponibles :
                 - create-drop : Crée les tables au démarrage, les supprime à l'arrêt
                 - create : Crée les tables au démarrage (écrase l'existant)
                 - update : Met à jour le schéma (conserve les données)
                 - validate : Valide que le schéma correspond aux entités
                 - none : Aucune action automatique
            -->
            
            <!-- Script SQL d'initialisation des données -->
            <property name="jakarta.persistence.sql-load-script-source" value="META-INF/data.sql"/>
            
            <!-- Affichage et formatage SQL -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            
            <!-- Gestion des noms de colonnes/tables -->
            <property name="hibernate.physical_naming_strategy" value="org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl"/>
            <property name="hibernate.implicit_naming_strategy" value="org.hibernate.boot.model.naming.ImplicitNamingStrategyLegacyJpaImpl"/>
            
            <!-- Configuration du pool de connexions par défaut -->
            <property name="hibernate.connection.pool_size" value="10"/>
            <property name="hibernate.connection.autocommit" value="false"/>
            
            <!-- Optimisations -->
            <property name="hibernate.jdbc.batch_size" value="25"/>
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
            <property name="hibernate.jdbc.batch_versioned_data" value="true"/>
        </properties>
    </persistence-unit>
</persistence>